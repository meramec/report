.app-title.header-banner
  .title
    {{ report.title }}

    %user.screen-only

  .subtitle
    %ul.inline
      %li
        {{ report.subtitle }}
      %li{ 'ng-repeat' => 'nested in report.nestedSubtitle' }
        {{ nested }}

    .link.screen-only{ 'ng-click' => 'print()' }
      %i.fa.fa-print
    .link.screen-only{ 'ng-click' => 'chooseFile()' }
      %i.fa.fa-folder
    .link.screen-only{ 'ng-click' => 'goHome()' }
      %i.fa.fa-home

